# BindX V2 Environment Configuration

# =============================================================================
# DATABASE - SUPABASE
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# V9 — SUPABASE DIRECT CONNECTION (async PostgreSQL)
# =============================================================================
# Direct connection (not pooler) — required for asyncpg prepared statements
DATABASE_V9_URL=postgresql+asyncpg://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres
SUPABASE_JWT_SECRET=your-supabase-jwt-secret
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Frontend Supabase (Vite env vars must start with VITE_)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
BACKEND_HOST=localhost
BACKEND_PORT=8000
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
DEBUG=true
ENVIRONMENT=development

# =============================================================================
# FRONTEND CONFIGURATION  
# =============================================================================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_SUPABASE_URL=https://your-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your-anon-key-here
REACT_APP_ENVIRONMENT=development

# =============================================================================
# TASK QUEUE - REDIS & CELERY
# =============================================================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# MOLECULAR COMPUTING
# =============================================================================

# RunPod Serverless GPU (for GNINA GPU acceleration)
RUNPOD_API_KEY=your-runpod-api-key-here
RUNPOD_TEMPLATE_ID=your-template-id

# Docking configuration
VINA_EXECUTABLE=/usr/local/bin/vina
GNINA_EXECUTABLE=/usr/local/bin/gnina
DIFFDOCK_MODEL_PATH=/models/diffdock

# =============================================================================
# EMAIL NOTIFICATIONS
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM_NAME=BindX Platform
SMTP_FROM_EMAIL=noreply@bindx.example.com

# =============================================================================
# DATA STORAGE & DIRECTORIES
# =============================================================================
DATA_DIR=./data
STRUCTURES_DIR=./data/structures
LIBRARIES_DIR=./data/libraries
MODELS_DIR=./data/models
CACHE_DIR=./data/cache
ARTIFACTS_DIR=./data/artifacts
TEMP_DIR=/tmp/bindx

# =============================================================================
# EXTERNAL APIs & SERVICES
# =============================================================================

# ChEMBL API
CHEMBL_API_URL=https://www.ebi.ac.uk/chembl/api/data
CHEMBL_RATE_LIMIT=10

# PubChem API  
PUBCHEM_API_URL=https://pubchem.ncbi.nlm.nih.gov/rest/pug
PUBCHEM_RATE_LIMIT=5

# UniProt API
UNIPROT_API_URL=https://rest.uniprot.org

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=debug
SENTRY_DSN=your-sentry-dsn-here

# =============================================================================
# SECURITY
# =============================================================================
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_CREDENTIALS=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
NODE_ENV=development
PYTHON_ENV=development
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Hot reload
WATCHPACK_POLLING=true
CHOKIDAR_USEPOLLING=true

# =============================================================================
# PRODUCTION OVERRIDES (comment out for dev)
# =============================================================================
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=info
# SECURE_SSL_REDIRECT=true
# SECURE_HSTS_SECONDS=31536000
